# Production Environment Variables

# 서버 설정 (실제 서버 IP 또는 도메인으로 변경)
SERVER_HOST=your-server-ip-or-domain.com
SERVER_PORT=80

# Frontend 설정
NEXT_PUBLIC_API_URL=http://${SERVER_HOST}:8000
NEXT_PUBLIC_WS_URL=ws://${SERVER_HOST}:8000

# Backend 설정
FRONTEND_URL=http://${SERVER_HOST}:3000
CORS_ORIGINS=http://${SERVER_HOST}:3000,http://${SERVER_HOST}

# Ollama 설정
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=gemma3:12b

# API Keys
TAVILY_API_KEY=your_tavily_api_key_here

# Database
POSTGRES_PASSWORD=strong_password_here
DATABASE_URL=postgresql+asyncpg://research_user:${POSTGRES_PASSWORD}@postgres:5432/research_db

# Redis
REDIS_PASSWORD=strong_redis_password_here

# Security
SECRET_KEY=your-very-secure-secret-key-here

# Logging
LOG_LEVEL=INFO